#simple calculator

def calculator(a, b, operation):
  if operation == '+':
      return a + b
  elif operation == '-':
      return a - b
  elif operation == '*':
      return a * b
  elif operation == '/':
      return a / b
  else:
      return "Invalid operation"

#EXAMPLE
if _name_ == "_main_":
  a = float(input("Enter first number: "))
  b = float(input("Enter second number: "))
  op = input("Enter operation (+, -, *, /): ")
  print("Result:", calculator(a, b, op))
